---
const headTableTitles = [
  {
    text: "Studies",
    src: "./assets/study.svg",
    content: {
      rows: [
        { text: "Master in Digital Business", link: "" },
        { text: "Comercial Engineer", link: "" },
      ],
    },
  },
  {
    text: "CV",
    src: "./assets/report.svg",
    content: { rows: [{ text: "Download", link: "./cv" }] },
  },
  {
    text: "Roles",
    src: "./assets/briefcase.svg",
    content: { rows: [{ text: "Fullstack Dev - OPIS", link: "./cv" },{ text: "Fullstack Dev - Dreambox", link: "./cv" },{ text: "FrontEnd Dev - Approvecha", link: "./cv" }] },
  },
  { text: "Tools", src: "./assets/checklist.svg", content: { rows: [{ text:"React Js, React Native, Node Js, Next Js, SQL, AWS, GC"}]} },
  
];
const colWidth = (text:string)=>text=="CV" ? "w-2/12" :text=="Tools"?"w-2/12":"w-3/12"
---
<div class="flex w-8/12 lg:w-12/12 items-center justify-center mb-20">
    <div
      class="flex justify-between text-white w-full h-56 rounded-xl bg-[rgb(50,50,50,0.5)] pt-5 pl-5 pr-5"
    >
      {
        headTableTitles.map(({ text, src, content }) => (
          <div class=`${colWidth(text)} justify-center`>
            <span class="flex w-full items-center justify-start">
              {" "}
              <img class="w-6 h-6 mr-1" src={src} alt={"Studies"} />
              {text}
            </span>
            <div class="flex flex-col w-full items-start justify-center mt-5">
              {content?.rows?.map(({ text, link }) => (
                <a class="mt-2 h-5" href={link}>
                  <p>{text}</p>
                </a>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>