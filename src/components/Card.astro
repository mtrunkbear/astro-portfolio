---
import Button from './Button.astro';
export interface Props {
  title: string;
  image: string;
  url: string;
  description: string;
}

const { url, image, title, description } = Astro.props;
---

<div class=" flex flex-col min-w-[250px] w-[90vw] sm:w-[48vw] md:w-[38vw] lg:w-[24vw] xl:w-[14-vw] sm:max-w-[280px] md:max-w-full lg:max-w-[300px] xl:max-w-[300px] h-[400px] sm:h-[490px] rounded-3xl shadow bg-[#341c4c]">
  <a  href={url}>
    <h5
      class="flex mb-2 text-[20px] font-bold tracking-tight text-gray-900 dark:text-white sm:h-20 items-center p-5 pl-8"
    >
      {title}
    </h5>
  </a>
  <a  href={url}>
    <img class="w-full max-h-[150px] sm:max-h-[250px] min-h-[200px]" src={image} alt="" />
  </a>
  <div class="sm:p-5 min-h-[80px]">
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
      {description}
    </p>
  </div>
  <div
    class="flex items-center justify-center bg-black w-full  h-full  rounded-b-3xl"
  >
 <Button href={url}>View</Button>
  </div>
</div>
