---
import Button from './Button.astro';
export interface Props {
  title: string;
  image: string;
  url: string;
  description: string;
}

const { url, image, title, description } = Astro.props;
---

<div class="max-w-sm w-[300px] h-[450px] rounded-3xl shadow bg-[#341c4c]">
  <a href="#">
    <h5
      class="flex mb-2 text-[20px] font-bold tracking-tight text-gray-900 dark:text-white h-20 items-center pl-10"
    >
      {title}
    </h5>
  </a>
  <a href="#">
    <img class="rounded-t-lg" src={image} alt="" />
  </a>
  <div class="p-5">
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
      {description}
    </p>
  </div>
  <div
    class="flex items-center justify-center bg-black w-full h-[90px] rounded-b-3xl"
  >
 <Button/>
  </div>
</div>
