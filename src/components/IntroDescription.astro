---
import RRSS from "./RRSS.astro";
const { style, descriptionFontSize, title, description, withRRSS } = Astro.props;
---

<div
  class=`flex flex-col md:items-start sm:pl-20 justify-center p-4 leading-normal w-12/12 sm:w-11/12 md:w-6/12 ${style}`
> <h1
    class="mb-2 w-full sm:w-10/12  text-xl md:text-4xl font-black tracking-tight text-white leading-29"
  >
    {title}
  </h1>
  <h2
    class=`w-full sm:w-10/12 mb-3 text-white dark:text-white text-base md:text-lg font-bold leading-29 tracking-normal ${descriptionFontSize}`
  >
    {description}
  </h2>
  <div class="flex justify-start w-full">
    {withRRSS && <RRSS />}
  </div>
</div>
